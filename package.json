{
  "name": "dvote-client",
  "version": "0.0.1",
  "description": "Javascript client library to work with the Vocdoni core features",
  "main": "dist/index",
  "typings": "dist/index",
  "repository": "https://github.com/vocdoni/dvote-client.git",
  "author": "Aleix <noname@gmail.com>",
  "license": "GPL-3.0-or-later",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.7",
    "@types/web3": "^1.0.12",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "sinon": "^7.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && npm run build",
    "clean": "rm -fR dist",
    "build": "./node_modules/typescript/bin/tsc",
    "watch": "./node_modules/typescript/bin/tsc -w -p .",
    "ts-node": "./node_modules/ts-node/dist/bin.js",
    "test": "./node_modules/mocha/bin/mocha -r ts-node/register test/**/*.ts",
    "test-unit": "./node_modules/mocha/bin/mocha -r ts-node/register test/unit/*.ts",
    "test-integration": "./node_modules/mocha/bin/mocha -r ts-node/register test/integration/*.ts"
  },
  "dependencies": {
    "@types/request": "^2.48.1",
    "dvote-smart-contracts": "0.0.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "web3": "^1.0.0-beta.37"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts"
}
