{
  "name": "dvote-js",
  "version": "1.13.3",
  "description": "Javascript/Typescript library to interact with Vocdoni voting processes",
  "main": "dist/index",
  "types": "dist/index",
  "repository": "https://github.com/vocdoni/dvote-js.git",
  "author": "Vocdoni <root@vocdoni.io>",
  "license": "GPL-3.0-or-later",
  "private": false,
  "scripts": {
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "prebuild": "git submodule init && git submodule update",
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "watch": "./node_modules/.bin/tsc -w -p .",
    "ts-node": "./node_modules/.bin/ts-node",
    "test": "npm run build && ./node_modules/.bin/mocha -r ts-node/register test/**/*.ts",
    "test:unit": "npm run build && ./node_modules/.bin/mocha -r ts-node/register test/unit/*.ts",
    "test:integration": "npm run build && ./node_modules/.bin/mocha -r ts-node/register test/integration/*.ts",
    "postinstall": "rimraf node_modules/ganache-core/node_modules/web3-providers-ws/node_modules/websocket/.git || true"
  },
  "dependencies": {
    "@vocdoni/common": "^1.14.0",
    "@vocdoni/signing": "^1.14.0",
    "@vocdoni/hashing": "^1.14.0",
    "vocdoni-contracts": "file:packages/contracts/contracts.tgz",
    "vocdoni-encryption": "file:packages/encryption/encryption.tgz",
    "vocdoni-models": "file:packages/models/models.tgz",
    "vocdoni-net": "file:packages/net/net.tgz",
    "vocdoni-client": "file:packages/client/client.tgz",
    "vocdoni-wallets": "file:packages/wallets/wallets.tgz"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/elliptic": "^6.4.12",
    "@types/express": "^4.17.9",
    "@types/google-protobuf": "^3.7.4",
    "@types/mocha": "^9.0.0",
    "@types/yup": "^0.29.0",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "ganache-cli": "^6.12.2",
    "ganache-core": "^2.13.2",
    "mocha": "^9.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  }
}
