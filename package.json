{
  "name": "dvote-client",
  "version": "0.0.6",
  "description": "Javascript client library to work with the Vocdoni core features",
  "main": "dist/index",
  "typings": "dist/index",
  "repository": "https://github.com/vocdoni/dvote-client.git",
  "author": "Aleix <aleix@vocdoni.io>",
  "license": "GPL-3.0-or-later",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/request": "^2.48.1",
    "@types/sinon": "^5.0.7",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "sinon": "^7.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && npm run build",
    "clean": "rm -fR dist",
    "build": "./node_modules/typescript/bin/tsc",
    "watch": "./node_modules/typescript/bin/tsc -w -p .",
    "ts-node": "./node_modules/ts-node/dist/bin.js",
    "test": "BLOCKCHAIN_URL='http://localhost:8545' CENSUS_SERVICE_URL='http://localhost:1500' ./node_modules/mocha/bin/mocha -r ts-node/register test/**/*.ts",
    "test-unit": "./node_modules/mocha/bin/mocha -r ts-node/register test/unit/*.ts",
    "test-integration": "BLOCKCHAIN_URL='http://localhost:8545' CENSUS_SERVICE_URL='http://localhost:1500' ./node_modules/mocha/bin/mocha -r ts-node/register test/integration/*.ts",
    "testintest": "BLOCKCHAIN_URL='http://node.testnet.vocdoni.io:8545' CENSUS_SERVICE_URL='http://census.vocdoni.io' ./node_modules/mocha/bin/mocha -r ts-node/register test/**/*.ts"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dvote-smart-contracts": "0.0.5",
    "request": "^2.88.0",
    "web3": "^1.0.0-beta.37",
    "web3-eth-personal": "^1.0.0-beta.37"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts"
}
