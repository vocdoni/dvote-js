{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "pretty": true,
        "declaration": true,
        "sourceMap": true,
        "target": "es2020",
        "outDir": "dist",
        "baseUrl": "src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/protobuf/src",
        "src/protobuf/build/dart",
        "src/protobuf/build/go"
    ]
}
